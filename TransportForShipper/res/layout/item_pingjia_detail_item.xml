<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="7dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:padding="5dp">
		<ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/pjtb"
	        android:id="@+id/pjtb"/>
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:layout_toRightOf="@id/pjtb"
	        android:text="李师傅"
	        style="@style/main_style_4"
	        android:id="@+id/realName"/>
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:layout_toRightOf="@id/realName"
	        android:layout_alignBaseline="@id/realName"
	        android:text="@string/yslnum"
	        style="@style/main_style_3"
	        android:id="@+id/yslnum"/>
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:layout_toRightOf="@id/yslnum"
	        android:layout_alignBaseline="@id/yslnum"
	        android:text="288"
	        style="@style/item_goods_7"
            android:id="@+id/yslAccount"/>
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignBaseline="@id/yslAccount"
	        android:text="2014-03-01 09:32:55"
	        style="@style/item_goods_1"
            android:id="@+id/pingjiaShiJian"/>
    </RelativeLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#FAF7E4"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
		<LinearLayout
	        android:layout_width="70dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center">
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/zhdf"
		        style="@style/item_goods_7"/>
	        <RatingBar
	   	       android:id="@+id/xingji"
	   	       style="@style/MyRatingBar"
	   	       android:layout_width="wrap_content"
	   	       android:layout_height="wrap_content"
	   	       android:layout_marginTop="5dp"
	   	       android:rating="1.0" 
	   	       android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_horizontal">
	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical">
		        <!-- 送货及时  如实描述-->
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="送货及时："
			        style="@style/item_goods_9"
			        android:id="@+id/miaoshu1"/>
	        <RatingBar
	   	       android:id="@+id/pingfen1"
	   	       style="@style/MyRatingBar"
	   	       android:layout_width="wrap_content"
	   	       android:layout_height="wrap_content"
	   	       android:rating="1.0" 
	   	       android:clickable="false"/>
	        </LinearLayout>
        	<LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical">
		        <!-- 货物玩好  结款及时-->
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="货物完好："
			        style="@style/item_goods_9"
			        android:id="@+id/miaoshu2"/>
		        <RatingBar
		   	       android:id="@+id/pingfen2"
		   	       style="@style/MyRatingBar"
		   	       android:layout_width="wrap_content"
		   	       android:layout_height="wrap_content"
		   	       android:rating="1.0" 
		   	       android:clickable="false"/>
	        </LinearLayout>
        </LinearLayout>
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_horizontal">
	        <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical">
		        <!-- 运价合理 -->
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="运价合理："
			        style="@style/item_goods_9"/>
		        <RatingBar
		   	       android:id="@+id/yunjiaheli"
		   	       style="@style/MyRatingBar"
		   	       android:layout_width="wrap_content"
		   	       android:layout_height="wrap_content"
		   	       android:rating="1.0" 
		   	       android:clickable="false"/>
	        </LinearLayout>
        	<LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical">
		        <!-- 态度良好-->
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="态度良好："
			        style="@style/item_goods_9"/>
		        <RatingBar
		   	       android:id="@+id/taidulianghao"
		   	       style="@style/MyRatingBar"
		   	       android:layout_width="wrap_content"
		   	       android:layout_height="wrap_content"
		   	       android:rating="1.0" 
		   	       android:clickable="false"/>
	        </LinearLayout>
        </LinearLayout>
	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:padding="5dp">
		<TextView
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/item_low"
	    	android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	android:text="@string/pjcontent"
	    	style="@style/item_goods_6"/>
		<TextView
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="5dp"
	    	android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	style="@style/main_style_3"
	    	android:id="@+id/pingjiaContent"/>
	</LinearLayout>
</LinearLayout>