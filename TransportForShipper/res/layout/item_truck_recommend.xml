<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/color_background">
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="5dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/item_goods">
	    <RelativeLayout
	        android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1">
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="20dp"
	    	    android:background="@drawable/tkbg1"
	    	    android:text="@string/tkinfo"
	    	    style="@style/item_goods_6"
	    	    android:id="@+id/item_tk_info_"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="5dp"
	    	    android:layout_marginTop="16dp"
	    	    android:layout_toRightOf="@id/item_tk_info_"
	    	    android:singleLine="true"
	    	    android:text="前四后八/9.6米/20吨/50方"
	    	    style="@style/main_style_4"
	    	    android:id="@+id/item_tk_info"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="10dp"
	    	    android:layout_below="@id/item_tk_info_"
	    	    android:background="@drawable/tkbg1"
	    	    android:text="@string/tktarget"
	    	    style="@style/item_goods_6"
	    	    android:id="@+id/item_tk_depart_"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="5dp"
	    	    android:layout_marginTop="6dp"
	    	    android:layout_toRightOf="@id/item_tk_depart_"
	    	    android:layout_below="@id/item_tk_info_"
	    	    android:singleLine="true"
	    	    android:text="上海/石家庄/连云港/塔克拉玛干"
	    	    style="@style/main_style_4"
	    	    android:id="@+id/item_tk_target"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="10dp"
	    	    android:layout_below="@id/item_tk_depart_"
	    	    android:background="@drawable/tkbg1"
	    	    android:text="@string/tkdriver"
	    	    style="@style/item_goods_6"
	    	    android:id="@+id/item_tk_driver_"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="5dp"
	    	    android:layout_marginTop="6dp"
	    	    android:layout_toRightOf="@id/item_tk_driver_"
	    	    android:layout_below="@id/item_tk_depart_"
	    	    android:text="陈永刚"
	    	    style="@style/main_style_4"
	    	    android:id="@+id/item_tk_name"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="5dp"
	    	    android:layout_marginTop="10dp"
	    	    android:layout_toRightOf="@id/item_tk_name"
	    	    android:layout_below="@id/item_tk_depart_"
	    	    android:text="历史成交8笔"
	    	    style="@style/item_tk_2"
	    	    android:id="@+id/item_tk_count"/>
	    	<View 
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:layout_marginTop="10dp"
			    android:layout_below="@id/item_tk_count"
			    android:background="@drawable/xline2"
			    android:id="@+id/item_tk_view"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginTop="10dp"
	    	    android:layout_below="@id/item_tk_view"
	    	    android:background="@drawable/tknobg"
	    	    android:gravity="center"
	    	    android:text="@string/lastloca"
	    	    style="@style/item_tk_1"
	    	    android:id="@+id/item_tk_location_"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="5dp"
	    	    android:layout_marginTop="6dp"
	    	    android:layout_toRightOf="@id/item_tk_location_"
	    	    android:layout_below="@id/item_tk_view"
	    	    android:text="浙江杭州"
	    	    style="@style/main_style_4"
	    	    android:id="@+id/item_tk_location"/>
	    	<TextView
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="5dp"
	    	    android:layout_marginTop="6dp"
	    	    android:layout_toRightOf="@id/item_tk_location"
	    	    android:layout_below="@id/item_tk_view"
	    	    android:text="【空车中】"
	    	    style="@style/login_getpwd"
	    	    android:id="@+id/item_tk_status"/>
	    </RelativeLayout>
	    <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_gravity="right">
		    <!-- 呼叫司机 -->
		    <LinearLayout
		        android:layout_width="60dp"
		        android:layout_height="60dp"
		        android:background="@drawable/btnbg1"
		        android:orientation="vertical" 
		        android:gravity="center_horizontal"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:paddingTop="10dp"
		        android:id="@+id/item_goods_detail_teldriver"
		        android:onClick="onClick">
	        	<ImageView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:src="@drawable/teltb"/>
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginTop="5dp"
	        	    android:text="@string/teldriver"
	        	    style="@style/main_style_3"/>
	       	</LinearLayout>
	       	<!-- 诚信查询 -->
	       	<LinearLayout
		        android:layout_width="60dp"
		        android:layout_height="60dp"
		        android:background="@drawable/btnbg1"
		        android:orientation="vertical" 
		        android:gravity="center_horizontal"
		        android:layout_marginTop="5dp"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:paddingTop="10dp"
		        android:id="@+id/item_goods_detail_cxcx"
		        android:onClick="onClick">
	        	<ImageView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:src="@drawable/cxcxtb"/>
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginTop="5dp"
	        	    android:text="@string/cxcx"
	        	    style="@style/main_style_3"/>
	       	</LinearLayout>
	    </LinearLayout>
	</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:background="@drawable/tknobg2"
	   	android:layout_gravity="center_horizontal"
	   	android:gravity="center"
	   	android:text="浙A61117"
	   	style="@style/item_goods_5"
	   	android:id="@+id/item_truck_no"/>
</FrameLayout>
