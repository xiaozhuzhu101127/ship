<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/score_shop_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="2dp"
        android:textColor="#333333"
        android:textScaleX="0.96"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/score_shop_dialog_cancel"
            android:layout_width="125.08dp"
            android:layout_height="38.73dp"
            android:background="@drawable/btn20782"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/score_shop_dialog_dial"
            android:layout_width="125.08dp"
            android:layout_height="38.73dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn20782"
            android:gravity="center"
            android:textSize="16sp" 
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>