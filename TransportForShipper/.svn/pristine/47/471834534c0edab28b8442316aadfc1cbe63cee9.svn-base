<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calling_layout"
    android:layout_width="fill_parent"
    android:layout_height="95.87dp"
    android:background="@drawable/calling_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="12dp" >


    <ImageView
        android:id="@+id/calling_info_verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="5dp"
        android:src="@drawable/calling_dialog_icon1"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/calling_info_unverified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginLeft="5dp"
        android:src="@drawable/calling_dialog_icon2"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/calling_info_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textScaleX="0.9"
            android:text=""
            android:textSize="20sp" />
        <TextView
            android:id="@+id/calling_info_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textScaleX="0.9"
            android:layout_marginTop="4dp"
            android:text=""
            android:textSize="20sp" />
        <TextView
            android:id="@+id/calling_info_credit_complaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textScaleX="0.9"
            android:layout_marginTop="4dp"
            android:text=""
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>