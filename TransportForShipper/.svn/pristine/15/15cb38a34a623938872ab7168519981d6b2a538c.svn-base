<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_background">
    <include
        layout="@layout/common_title"/>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:padding="7dp">
		    <!-- 出发地 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/publishbg"
		        android:layout_marginTop="7dp"
		        android:padding="7dp"
		        android:gravity="center_vertical">
		        <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:drawableLeft="@drawable/bt"
		        	android:text="@string/depart"
		        	style="@style/main_style_4"/>
		        
		        <TextView
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/select"
		        	android:gravity="center_vertical"
		        	android:layout_weight="1"
		        	android:clickable="true"
		        	android:onClick="click"
		        	style="@style/main_style_7"
		        	android:id="@+id/goods_publish_depart"/>
		    </LinearLayout>
		    <!-- 目的地 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/publishbg"
		        android:layout_marginTop="7dp"
		        android:padding="7dp"
		        android:gravity="center_vertical">
		        <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:drawableLeft="@drawable/bt"
		        	android:text="@string/target"
		        	style="@style/main_style_4"/>
		        <TextView
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/select"
		        	android:gravity="center_vertical"
		        	android:layout_weight="1"
		        	style="@style/main_style_7"
		        	android:clickable="true"
		        	android:onClick="click"
		        	android:id="@+id/goods_publish_target"/>
		    </LinearLayout>
		    <!-- 类型、重量、立方 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="7dp">
		        <!-- 类型 -->
		        <TextView
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:padding="7dp"
		        	android:background="@drawable/publishbg"
		        	android:gravity="center_vertical"
		        	android:drawableLeft="@drawable/bt"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/commongoods"
		        	style="@style/main_style_4"
		        	android:clickable="true"
		        	android:onClick="click"
		        	android:id="@+id/goods_publish_type"/>
		        <!-- 体积/重量 -->
		        <EditText
		            android:layout_width="70dp"
		        	android:layout_height="wrap_content"
		        	android:layout_marginLeft="7dp"
		        	android:padding="7dp"
		        	android:background="@drawable/publishbg"
		        	android:gravity="center"
		        	android:maxLength="6"
		        	android:inputType="number"
		        	android:hint="@string/goodsw"
		        	style="@style/main_style_4"
		        	android:id="@+id/goods_publish_typenum"/>
		        
		        <!-- 吨/立方 -->
		        <TextView
		            android:layout_width="70dp"
		        	android:layout_height="wrap_content"
		        	android:layout_marginLeft="7dp"
		        	android:padding="7dp"
		        	android:background="@drawable/publishbg"
		        	android:gravity="center_vertical"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/lifang"
		        	style="@style/main_style_4"
		        	android:clickable="true"
		        	android:onClick="click"
		        	android:id="@+id/goods_publish_type_dw"/>
		    </LinearLayout>
		    <!-- 车型和车长 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="7dp">
		        <!-- 车型 -->
		        <TextView
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:padding="7dp"
		        	android:background="@drawable/publishbg"
		        	android:gravity="center_vertical"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/tktypebx"
		        	style="@style/main_style_4"
		        	android:clickable="true"
		        	android:onClick="click"
		        	android:id="@+id/goods_publish_tktype"/>
		        <!-- 车长 -->
		        <TextView
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_marginLeft="7dp"
		        	android:padding="7dp"
		        	android:background="@drawable/publishbg"
		        	android:gravity="center_vertical"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/tklengbx"
		        	style="@style/main_style_4"
		        	android:clickable="true"
		        	android:onClick="click"
		        	android:id="@+id/goods_publish_tklength"/>
		    </LinearLayout>
		    <!-- 付款方式和装卸方式 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="7dp">
		        <!-- 付款方式 -->
		        <TextView
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:padding="7dp"
		        	android:background="@drawable/publishbg"
		        	android:gravity="center_vertical"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/payway"
		        	style="@style/main_style_4"
		        	android:clickable="true"
		        	android:onClick="click"
		        	android:id="@+id/goods_publish_payway"/>
		        <!-- 装卸方式 -->
		        <TextView
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:layout_weight="1"
		        	android:layout_marginLeft="7dp"
		        	android:padding="7dp"
		        	android:background="@drawable/publishbg"
		        	android:gravity="center_vertical"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/gsload"
		        	style="@style/main_style_4"
		        	android:clickable="true"
		        	android:onClick="click"
		        	android:id="@+id/goods_publish_loadway"/>
		    </LinearLayout>
		    <!-- 可接受运价 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/publishbg"
		        android:layout_marginTop="7dp"
		        android:padding="7dp"
		        android:gravity="center_vertical">
		        <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="@string/transportprice"
		        	style="@style/main_style_4"/>
		        <EditText
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:hint="@string/select2"
		        	android:layout_weight="1"
		        	android:background="@null"
		        	android:padding="7dp"
		        	android:maxLength="6"
		        	android:inputType="number"
		        	style="@style/main_style_7"
		        	android:id="@+id/goods_publish_transprice"/>
		        <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="@string/yuan"
		        	style="@style/main_style_7"/>
		    </LinearLayout>
		    <!--自动发布 -->
		    <CheckBox
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="7dp"
		        android:text="@string/autodeal"
		        android:checked="true"
		        android:clickable="false"
		        style="@style/main_style_3"
		        android:layout_gravity="right"/>
		    <!-- 信息费 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/publishbg"
		        android:layout_marginTop="7dp"
		        android:padding="7dp"
		        android:gravity="center_vertical">
		        <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="@string/infoprice"
		        	style="@style/main_style_4"/>
		        <EditText
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:hint="@string/select2"
		        	android:background="@null"
		        	android:layout_weight="1"
		        	android:maxLength="6"
		        	android:inputType="number"
		        	style="@style/main_style_7"
		        	android:id="@+id/goods_publish_infoprice"/>
		        <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="@string/defaultprice"
		        	style="@style/main_style_7"/>
		    </LinearLayout>
		    <!-- 装货时间 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/publishbg"
		        android:layout_marginTop="7dp"
		        android:padding="7dp"
		        android:gravity="center_vertical">
		        <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="@string/gsloaddate"
		        	style="@style/main_style_4"/>
		        <!--  <DatePicker 
					android:id="@+id/datePicker1" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/>-->
		        <TextView
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:drawableRight="@drawable/jt2"
		        	android:text="@string/select"
		        	android:layout_weight="1"
		        	android:gravity="center_vertical"
		        	style="@style/main_style_7"
		        	android:clickable="true"
		        	android:onClick="click"
		        	android:id="@+id/goods_publish_gsloaddate"/>
		        
		    </LinearLayout>
		    <!-- 其他说明 -->
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/publishbg"
		        android:layout_marginTop="7dp"
		        android:padding="7dp"
		        android:gravity="center_vertical">
		        <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:text="@string/desc"
		        	style="@style/main_style_4"/>
		        <EditText
		            android:layout_width="0dp"
		        	android:layout_height="wrap_content"
		        	android:hint="@string/select2"
		        	android:layout_weight="1"
		        	android:padding="7dp"
		        	style="@style/main_style_7"
		        	android:inputType="text"
		        	android:maxLength="40"
		        	android:background="@null"
		        	android:id="@+id/goods_publish_desc"/>
		    </LinearLayout>
		    <TextView
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="7dp"
		        	android:layout_gravity="center"
		        	android:text="@string/pub"
		        	style="@style/main_style_3"/>
	    </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/common_footer"/>
</LinearLayout>
