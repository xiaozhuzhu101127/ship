<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false"
    android:scrollbarSize="0.5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"/>
    <!-- 今日信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:orientation="vertical">
        <!-- 今日货源 -->
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/main_style_item_1"
	        android:id="@+id/today_goods"
	        android:onClick="onClick">
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/jrhytb"
	            android:id="@+id/today_goods_item1"/>
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/today_goods_item1"
	            android:layout_marginLeft="10dp"
	            android:layout_centerVertical="true"
	            android:text="@string/todaygoods"
	            style="@style/main_style_1"/>
        	<ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:src="@drawable/jt"
	            android:id="@+id/today_goods_item2"/>
        	<TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@id/today_goods_item2"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            style="@style/main_style_2"
	            android:id="@+id/todayGoods"/>
    	</RelativeLayout>
    	<!-- 发布货源 -->
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/main_style_item_1"
	        android:id="@+id/publish_goods"
	        android:onClick="onClick">
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/fbhytb"
	            android:id="@+id/fabu_goods_item1"/>
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/fabu_goods_item1"
	            android:layout_marginLeft="10dp"
	            android:layout_centerVertical="true"
	            android:text="@string/fabugoods"
	            style="@style/main_style_1"/>
        	<ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:src="@drawable/jt"
	            android:id="@+id/fabu_goods_item2"/>
    	</RelativeLayout>
    	<!-- 今日货源 -->
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/main_style_item_1"
	        android:id="@+id/tx_goods"
	        android:onClick="onClick">
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/thhytb"
	            android:id="@+id/th_goods_item1"/>
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/th_goods_item1"
	            android:layout_marginLeft="10dp"
	            android:layout_centerVertical="true"
	            android:text="@string/thgoods"
	            style="@style/main_style_1"/>
        	<ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:src="@drawable/jt"
	            android:id="@+id/th_goods_item2"/>
        	<TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@id/th_goods_item2"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            style="@style/main_style_2"
	            android:id="@+id/thhy_goods"/>
    	</RelativeLayout>
    	<!-- 车源推荐 -->
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/main_style_item_1"
	        android:id="@+id/aroundtk"
	        android:onClick="onClick">
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/jrhytb"
	            android:id="@+id/cytj_item1"/>
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/cytj_item1"
	            android:layout_marginLeft="10dp"
	            android:layout_centerVertical="true"
	            android:text="@string/trucktj"
	            style="@style/main_style_1"/>
        	<ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:src="@drawable/jt"
	            android:id="@+id/cytj_item2"/>
        	<TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@id/cytj_item2"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            style="@style/main_style_2"
	            android:id="@+id/aroundTs"/>
    	</RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/xline1"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background"
        android:orientation="vertical"
        android:padding="7dp">
	    <!-- 应用 -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/main_item_bg2">
	        <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="vertical" 
		        android:gravity="center_horizontal"
		        android:padding="10dp"
		        android:id="@+id/history_goods"
		        android:onClick="onClick">
	        	<ImageView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:src="@drawable/lshytb"/>
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginTop="5dp"
	        	    android:text="@string/historygoods"
	        	    style="@style/main_style_3"/>
	       	</LinearLayout>
	       	<View
	       	    android:layout_height="60dp"
	       	    android:layout_width="0.9dp"
	       	    android:background="@color/color_background_2"/>
	       <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="vertical" 
		        android:gravity="center_horizontal"
		        android:padding="10dp"
		        android:id="@+id/cxcx"
		        android:onClick="onClick">
	        	<ImageView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:src="@drawable/cxcxtb"/>
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginTop="5dp"
	        	    android:text="@string/cxcx"
	        	    style="@style/main_style_3"/>
	       	</LinearLayout>
	       	<View
	       	    android:layout_height="60dp"
	       	    android:layout_width="0.9dp"
	       	    android:background="@color/color_background_2"/>
	       	<LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="vertical" 
		        android:gravity="center_horizontal"
		        android:padding="10dp"
		        android:id="@+id/hyfl"
		        android:onClick="onClick">
	        	<ImageView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:src="@drawable/hyfltb"/>
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginTop="5dp"
	        	    android:text="@string/hyfl"
	        	    style="@style/main_style_3"/>
	       	</LinearLayout>
	       	<View
	       	    android:layout_height="60dp"
	       	    android:layout_width="0.9dp"
	       	    android:background="@color/color_background_2"/>
	       	<LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="vertical" 
		        android:gravity="center_horizontal"
		        android:padding="10dp"
		        android:id="@+id/moreyy"
		        android:onClick="onClick">
	        	<ImageView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:src="@drawable/moretb"/>
	        	<TextView
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginTop="5dp"
	        	    android:text="@string/moreyy"
	        	    style="@style/main_style_3"/>
	       	</LinearLayout>
	    </LinearLayout>
	
	    <!-- 个人信息 -->
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="7dp"
	        android:padding="7dp"
	        android:background="@drawable/main_item_bg3"
	        android:id="@+id/main_info"
	        android:visibility="gone">
	        <ImageView
	            android:layout_width="60dp"
	        	android:layout_height="85dp"
	        	android:scaleType="centerCrop"
	        	android:id="@+id/main_pic"
	        	android:src="@drawable/twitter_photo"/>
	        <LinearLayout
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:paddingLeft="5dp"
	        	android:layout_toRightOf="@id/main_pic"
	        	android:id="@+id/main_item_1">
	            <TextView
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		style="@style/main_style_4"
	        		android:text="林大鹏"
	        		android:id="@+id/main_user"/>
	            <TextView
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:paddingLeft="5dp"
	        		style="@style/main_style_3"
	        		android:text="诚信值:"/>
	            <TextView
	                android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		style="@style/main_style_2"
	        		android:text="0"
	        		android:id="@+id/main_yslaccount"/>
	        </LinearLayout>
	        <View
		        android:layout_width="match_parent"
		        android:layout_height="0.5dp"
		        android:layout_toRightOf="@id/main_pic"
		        android:layout_margin="3dp"
		        android:layout_below="@id/main_item_1"
		        android:background="@drawable/xline2"
		        android:id="@+id/main_item_2"/>
	        <!-- 公司、好评度等信息 -->
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
		        android:padding="5dp"
	            android:layout_toRightOf="@id/main_pic"
		        android:layout_below="@id/main_item_2"
		        android:id="@+id/main_my560">
	            <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
			        android:orientation="vertical">
			        <!-- 公司名称 -->
			        <TextView
		                android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		style="@style/main_style_3"
		        		android:text="浙江杭州大鹏货运物流有限公司"
		        		android:id="@+id/main_company"/>
			        <!-- 好评度 -->
			        <LinearLayout 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="5dp">
				        <TextView
			                android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"
			        		style="@style/main_style_3"
			        		android:text="发货好评度："/>
				        <RatingBar
				   	       style="@style/MyRatingBar"
				   	       android:layout_width="wrap_content"
				   	       android:layout_height="wrap_content"
				   	       android:layout_gravity="center_vertical"
				   	       android:rating="0.0" 
				   	       android:id="@+id/main_ratingbar"/>
				        <TextView
			                android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"
			        		android:layout_marginLeft="4dp"
			        		style="@style/main_style_5"
			        		android:text="0个评价"
			        		android:id="@+id/main_pjcount"/>
				    </LinearLayout>
				    <!-- 积分 -->
				    <TextView
		                android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:layout_marginTop="5dp"
		        		style="@style/main_style_3"
		        		android:text="铜牌会员/0积分"
		        		android:id="@+id/main_jifen"/>
			    </LinearLayout>
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:src="@drawable/jt"
		            android:layout_centerVertical="true"/>
	            
	        </RelativeLayout>
	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>