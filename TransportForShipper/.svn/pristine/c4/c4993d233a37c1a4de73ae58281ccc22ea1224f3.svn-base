<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

    <include
        layout="@layout/common_title" />
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:padding="15dp" 
        android:background="@drawable/flbg"
        android:id="@+id/rl_category_mall"
        android:onClick="onClick">
        <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/jfsctb"
         android:id="@+id/sctb"/>
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/sctb"
         android:layout_alignTop="@id/sctb"
         android:layout_marginLeft="22dp"
         android:text="积分商城"
         android:id="@+id/sctext1"
         style="@style/item_goods_10"/>
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/sctb"
         android:layout_below="@id/sctext1"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="22dp"
         android:text="积分兑换/积分充话费/积分抽奖"
         style="@style/main_style_3"/>
     </RelativeLayout>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:padding="15dp" 
        android:background="@drawable/flbg"
        android:id="@+id/choujiang"
        android:onClick="onClick">
        <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/cjtb"
         android:id="@+id/cjtb"/>
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/cjtb"
         android:layout_alignTop="@id/cjtb"
         android:layout_marginLeft="22dp"
         android:text="每日抽奖"
         android:id="@+id/cjtext1"
         style="@style/item_goods_10"/>
        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/cjtb"
         android:layout_below="@id/cjtext1"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="22dp"
         android:text="每天一名中奖幸运儿"
         style="@style/main_style_3"/>
     </RelativeLayout>

</LinearLayout>