<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="5dp"
    android:background="@drawable/item_goods"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_weight="1">
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
	        <TextView
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="订单号：201425886958"
	    		style="@style/main_style_3"
	    		android:id="@+id/item_history_goods_num"/>
	        <TextView
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:visibility="gone"
	    		android:text="报价25人"
	    		style="@style/main_style_3"
	    		android:id="@+id/item_history_goods_count"/>
	    </LinearLayout>
	   	<LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="5dp">
	        <TextView
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="浙江杭州"
	    		style="@style/item_goods_2"
	    		android:id="@+id/item_history_goods_depart"/>
	        <ImageView
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/rt"/>
	        <TextView
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="内蒙古呼和浩特"
	    		style="@style/item_goods_2"
	    		android:id="@+id/item_history_goods_target"/>
	    </LinearLayout>
		<TextView
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_marginTop="5dp"
	   		android:text="大型机械 20吨  需9.6米 高栏车一辆"
	   		style="@style/main_style_3"
	   		android:id="@+id/item_history_goods_gsinfo"/>
		<TextView
	        android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_marginTop="5dp"
	   		android:text="2014-03-01 09:32:56"
	   		style="@style/item_goods_1"
	   		android:id="@+id/item_history_goods_time"/>
		<View
		    android:layout_width="match_parent"
		    android:layout_height="0.9dp"
		    android:layout_marginTop="5dp"
		    android:background="@drawable/xline"/>
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp">
		    <TextView
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/item_low"
		    	android:paddingLeft="5dp"
		    	android:paddingRight="5dp"
		    	android:text="@string/tradeprice"
		    	android:layout_centerVertical="true"
		    	style="@style/item_goods_6"
		    	android:id="@+id/item_history_goods_low"/>
		    <TextView
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_toRightOf="@id/item_history_goods_low"
		    	android:layout_marginLeft="4dp"
		    	android:text="1000元"
		    	style="@style/item_goods_3"
		    	android:id="@+id/item_history_goods_price"/>
		    <!-- 未成功交易，显示状态 -->
		    <TextView
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:paddingLeft="5dp"
		    	android:drawableLeft="@drawable/tb"
		    	android:text="时间过期了"
		    	style="@style/main_style_4"
		    	android:visibility="gone"
		    	android:id="@+id/item_history_goods_status"/>
		</RelativeLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
		<!-- 删除 -->
		<LinearLayout
	        android:layout_width="60dp"
	        android:layout_height="63dp"
	        android:background="@drawable/gsinfobg3"
	        android:orientation="vertical" 
	        android:gravity="center_horizontal"
	        android:padding="5dp"
	        android:id="@+id/item_goods_history_del"
	        android:visibility="gone"
	        android:onClick="onClick">
        	<ImageView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:src="@drawable/deltb"/>
        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_marginTop="5dp"
        	    android:text="@string/del"
        	    style="@style/main_style_3"/>
       	</LinearLayout>
	    <!-- 司机信息 -->
	    <LinearLayout
	        android:layout_width="60dp"
	        android:layout_height="63dp"
	        android:background="@drawable/driverbg"
	        android:orientation="vertical" 
	        android:gravity="center_horizontal"
	        android:padding="5dp"
	        android:id="@+id/item_goods_history_driver">
        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_marginTop="12dp"
        	    android:text="林大鹏"
        	    style="@style/suc_goods_2"
        	    android:id="@+id/item_goods_history_bjname"/>
        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="历史成交"
        	    style="@style/item_goods_1"/>
        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="8笔"
        	    style="@style/item_goods_1"
        	    android:id="@+id/item_history_goods_count"/>
       	</LinearLayout>
       	<!-- 重发 -->
       	<LinearLayout
	        android:layout_width="60dp"
	        android:layout_height="63dp"
	        android:background="@drawable/item_low"
	        android:orientation="vertical" 
	        android:gravity="center_horizontal"
	        android:layout_marginTop="5dp"
	        android:padding="7dp"
	        android:id="@+id/item_goods_history_copy"
	        android:onClick="onClick">
        	<ImageView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:src="@drawable/cftb"/>
        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_marginTop="7dp"
        	    android:text="@string/repub"
        	    style="@style/item_goods_5"/>
       	</LinearLayout>
    </LinearLayout>
</LinearLayout>
