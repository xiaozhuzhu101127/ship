<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="@color/color_background">

    <include
        android:id="@+id/title_bar"
        layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="7dp" 
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15.9dp"
            android:layout_marginLeft="6.3dp"
            android:layout_marginTop="10.8dp"
            android:text="@string/select3"
            style="@style/main_style_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="143.5dp"
            android:layout_marginTop="6.3dp"
            android:orientation="vertical"
            android:padding="0.6dp"
            android:background="#FAF7E4">

            <CheckBox
                android:id="@+id/correct_name"
                android:layout_width="match_parent"
                android:layout_height="36.8dp"
                android:layout_marginLeft="15dp"
                android:text="姓名有误"
                style="@style/main_style_4" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/login_input_line" />

            <CheckBox
                android:id="@+id/correct_address"
                android:layout_width="match_parent"
                android:layout_height="33.7dp"
                android:layout_marginLeft="15dp"
                android:text="地址有误"
                style="@style/main_style_4" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/login_input_line" />

            <CheckBox
                android:id="@+id/correct_type"
                android:layout_width="match_parent"
                android:layout_height="33.7dp"
                android:layout_marginLeft="15dp"
                android:text="会员类型有误"
                style="@style/main_style_4" />
              <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/login_input_line" />
           
        </LinearLayout>

        <TextView
            android:id="@+id/correct_label01"
            android:layout_width="match_parent"
            android:layout_height="15.9dp"
            android:layout_marginLeft="6.3dp"
            android:layout_marginTop="16.5dp"
            android:text="纠错备注(正确信息备注)："
            style="@style/main_style_3" />
		<EditText
            android:id="@+id/correct_content"
            android:layout_width="match_parent"
            android:layout_height="111.1dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:padding="10dp"
            android:gravity="top"
            android:lines="10"
            android:hint="请提供正确信息内容……" 
            android:textColor="#C5C5C5"
            android:textSize="24sp" 
            android:maxLength="150" 
            android:background="@drawable/tsbg"/>
    </LinearLayout>
	<include
	    layout="@layout/common_footer"/>
</LinearLayout>