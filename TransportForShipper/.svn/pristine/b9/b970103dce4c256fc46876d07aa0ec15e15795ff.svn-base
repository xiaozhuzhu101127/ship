<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/main_background">
    <include
        layout="@layout/common_title"/>
   	<!-- 出发地 -->	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/publishbg"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:padding="7dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/depart"
        	style="@style/main_style_4"/>
        
        <TextView
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:drawableRight="@drawable/jt2"
        	android:text="@string/select"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	android:clickable="true"
        	android:onClick="click"
        	style="@style/main_style_6"
        	android:id="@+id/goods_search_depart"/>
    </LinearLayout>
    <!-- 目的地 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/publishbg"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:padding="7dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/target"
        	style="@style/main_style_4"/>
        <TextView
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:drawableRight="@drawable/jt2"
        	android:text="@string/select"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	style="@style/main_style_6"
        	android:clickable="true"
        	android:onClick="click"
        	android:id="@+id/goods_search_target"/>
    </LinearLayout>
    
    <!-- 车型 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/publishbg"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:padding="7dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/tktype"
        	style="@style/main_style_4"/>
        <TextView
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:drawableRight="@drawable/jt2"
        	android:text="@string/bx"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	style="@style/main_style_6"
        	android:clickable="true"
        	android:onClick="click"
        	android:id="@+id/goods_search_tktype"/>
    </LinearLayout>
    <!-- 车长 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/publishbg"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:padding="7dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/tklen"
        	style="@style/main_style_4"/>
        <TextView
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:drawableRight="@drawable/jt2"
        	android:text="@string/bx"
        	android:layout_weight="1"
        	android:gravity="center_vertical"
        	style="@style/main_style_6"
        	android:clickable="true"
        	android:onClick="click"
        	android:id="@+id/goods_search_tklen"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_background"
        android:orientation="vertical"
        android:padding="7dp">
		<TextView
	        android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:drawableLeft="@drawable/clock"
	       	android:text="@string/hissearch"
	       	android:layout_marginTop="7dp"
	        android:paddingLeft="7dp"
	        android:gravity="center_vertical"
	       	style="@style/main_style_3"/>
		<View
		    android:layout_width="match_parent"
		    android:layout_height="0.9dp"
		    android:layout_marginTop="5dp"
		    android:background="@drawable/xline"/>
		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:layout_gravity="center_horizontal"
		    android:visibility="gone"
		    android:src="@drawable/nosearch"
		    android:id="@+id/nosearch"/>
		<ListView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/search_history_listView"
		        android:fadingEdge="none"
		        android:divider="#CCCCCC"
		        android:dividerHeight="0.5dp"/>	 
    </LinearLayout>   
    <include
        layout="@layout/common_footer"/>
</LinearLayout>
