<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="5dp"
    android:background="@drawable/item_goods"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:text="订单号：201425886958"
    		android:visibility="gone"
    		style="@style/main_style_3"
    		android:id="@+id/item_today_goods_num"/>
        <TextView
            android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:text="报价0人"
    		style="@style/main_style_3"
    		android:id="@+id/item_today_goods_count"/>
        <TextView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="2014-03-01 09:32:56"
    		style="@style/item_goods_1"
    		android:id="@+id/item_today_goods_time"/>
    </LinearLayout>
   	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="浙江杭州"
    		style="@style/item_goods_2"
    		android:id="@+id/item_today_goods_depart"/>
        <ImageView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/rt"/>
        <TextView
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="内蒙古呼和浩特"
    		style="@style/item_goods_2"
    		android:id="@+id/item_today_goods_target"/>
    </LinearLayout>
	<TextView
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_marginTop="5dp"
   		android:text="大型机械 20吨  需9.6米 高栏车一辆"
   		style="@style/main_style_3"
   		android:id="@+id/item_today_goods_gsinfo"/>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="0.9dp"
	    android:layout_marginTop="5dp"
	    android:background="@drawable/xline"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp">
	    <TextView
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/item_low"
	    	android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	android:text="@string/lowprice"
	    	android:layout_centerVertical="true"
	    	style="@style/item_goods_6"
	    	android:id="@+id/item_today_goods_low"/>
	    <TextView
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_toRightOf="@id/item_today_goods_low"
	    	android:layout_marginLeft="4dp"
	    	android:visibility="gone"
	    	android:text="林大鹏"
	    	style="@style/main_style_4"
	    	android:id="@+id/item_today_goods_bjname"/>
	    <TextView
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_toRightOf="@id/item_today_goods_bjname"
	    	android:layout_marginLeft="4dp"
	    	android:text="【1000元】"
	    	android:visibility="gone"
	    	style="@style/item_goods_3"
	    	android:id="@+id/item_today_goods_price"/>
	    <TextView
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_toRightOf="@id/item_today_goods_low"
	    	android:layout_marginLeft="4dp"
	    	android:text="@string/nobj"
	    	style="@style/main_style_4"
	    	android:id="@+id/item_today_goods_nobj"/>
	    <TextView
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:text="@string/traded"
	    	android:visibility="gone"
	    	style="@style/item_goods_4"
	    	android:id="@+id/item_today_goods_traded"/>
	</RelativeLayout>
</LinearLayout>
